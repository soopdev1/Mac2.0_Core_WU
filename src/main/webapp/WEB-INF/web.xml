    <distributable/>
    <servlet>
        <servlet-name>Download</servlet-name>
        <servlet-class>rc.so.servlets.Download</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>rc.so.servlets.Login</servlet-class>
